<%- include('../includes/header.ejs') %> 

<body>
    <!-- Start Main Top -->
    <%- include('../includes/main-top.ejs') %> 
    <!-- End Main Top -->

    <!-- Start Main Top -->
    <header class="main-header">
        <!-- Start Navigation -->
        <%- include('../includes/navigation.ejs') %> 
        <!-- End Navigation -->
    </header>
    <!-- End Main Top -->

    <!-- Start Top Search -->
    <%- include('../includes/top-search.ejs') %> 
    <!-- End Top Search -->

    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Cart</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Shop</a></li>
                        <li class="breadcrumb-item active">Cart</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

    <!-- Start Cart  -->
    <div class="cart-box-main">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-main table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Images</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody><% for( let item of cartItems ) { %>
                                    <tr>
                                        <td class="thumbnail-img">
                                            <a href="<%= '/products/' + item.productId %> ">
                                        <img class="img-fluid" src="<%= item.product.imageUrl %>" alt="<%= item.product.title %>" />
                                    </a>
                                        </td>
                                        <td class="name-pr">
                                            <a href="<%= '/products/' + item.productId %> ">
                                        <%= item.product.title %>
                                    </a>
                                        </td>
                                        <td class="price-pr">
                                            <p>$ <%= item.product.price %> </p>
                                        </td>
                                        <td class="quantity-box"><input type="number" size="4" value="<%= item.quantity %>" min="0" step="1" class="c-input-text qty text"></td>
                                        <td class="total-pr">
                                            <p data-price="<%= +item.product.price %>" data-discount="<%= +item.product.discount %>">$ <%= (+item.product.price * +item.quantity).toFixed(2) %> </p>
                                        </td>
                                        <td class="remove-pr">
                                            <a data-productId="<%= item.productId %>" href="#" class="remove-cart">
                                        <i class="fas fa-times"></i>
                                    </a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row my-5">
                <div class="col-lg-6 col-sm-6">
                    <div class="coupon-box">
                        <div class="input-group input-group-sm">
                            <input class="form-control" placeholder="Enter your coupon code" aria-label="Coupon code" type="text">
                            <div class="input-group-append">
                                <button class="btn btn-theme" type="submit">Apply Coupon</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6">
                    <div class="update-box">
                        <button id="update-cart">Update Cart</button>
                    </div>
                </div>
            </div>

            <div class="row my-5">
                <div class="col-lg-8 col-sm-12"></div>
                <div class="col-lg-4 col-sm-12">
                    <div class="order-box">
                        <h3>Order summary</h3>
                        <div class="d-flex">
                            <h4>Sub Total</h4>
                            <div class="ml-auto font-weight-bold" id="subTotal"> $ <%= totalPrice %>  </div>
                        </div>
                        <div class="d-flex">
                            <h4>Discount</h4>
                            <div class="ml-auto font-weight-bold" id="discount"> $ 40 </div>
                        </div>
                        <hr class="my-1">
                        <div class="d-flex">
                            <h4>Coupon Discount</h4>
                            <div class="ml-auto font-weight-bold" id="coupon"> $ 10 </div>
                        </div>
                        <div class="d-flex">
                            <h4>Vat</h4>
                            <div class="ml-auto font-weight-bold" id="vat"> $ 2 </div>
                        </div>
                        <hr>
                        <div class="d-flex gr-total">
                            <h5>Grand Total</h5>
                            <div class="ml-auto h5" id="grand-total"> $ 388 </div>
                        </div>
                        <hr> </div>
                </div>
                <div class="col-12 d-flex shopping-box"><a href="/checkout" class="ml-auto btn hvr-hover">Checkout</a> </div>
            </div>

        </div>
    </div>
    <!-- End Cart -->

    <!-- Start Instagram Feed  -->
    <%- include('../includes/instagram.ejs') %> 
    <!-- End Instagram Feed  -->


    <!-- Start Footer  -->
    <%- include('../includes/footer.ejs') %> 
    <!-- End Footer  -->

    <!-- Start copyright  -->
    <%- include('../includes/copyright.ejs') %> 
    <!-- End copyright  -->

    <a href="#" id="back-to-top" title="Back to top" style="display: none;">&uarr;</a>

    <!-- ALL JS FILES -->
    <%- include('../includes/script.ejs') %>
    <script src="js/remove-cart-wishlist.js"></script>
    <script src="js/update-cart.js"></script>
</body>

</html>