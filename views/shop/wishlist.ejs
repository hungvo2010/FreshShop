<%- include('../includes/header.ejs') %>

<body>
    <!-- Start Main Top -->
    <%- include('../includes/main-top.ejs') %> 
    <!-- End Main Top -->

    <!-- Start Main Top -->
    <header class="main-header">
        <!-- Start Navigation -->
        <%- include('../includes/navigation.ejs') %> 
        <!-- End Navigation -->
    </header>
    <!-- End Main Top -->

    <!-- Start Top Search -->
    <%- include('../includes/top-search.ejs') %> 
    <!-- End Top Search -->

    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Wishlist</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Shop</a></li>
                        <li class="breadcrumb-item active">Wishlist</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

    <!-- Start Wishlist  -->
    <div class="wishlist-box-main">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-main table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Images</th>
                                    <th>Product Name</th>
                                    <th>Unit Price </th>
                                    <th>Stock</th>
                                    <th>Add Item</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let item of wishlist ) { %>
                                    <tr>
                                        <td class="thumbnail-img">
                                            <a href="<%= '/products/' + item.productId %>">
                                        <img class="img-fluid" src="<%= item.product.imageUrl %>" alt="<%= item.product.title %> " />
                                    </a>
                                        </td>
                                        <td class="name-pr">
                                            <a href="<%= '/products/' + item.productId %>">
                                        <%= item.product.title %> 
                                    </a>
                                        </td>
                                        <td class="price-pr">
                                            <p>$ <%= item.product.price %> </p>
                                        </td>
                                        <td class="quantity-box">In Stock</td>
                                        <td class="add-pr">
                                            <input type="hidden" name="productId" value="<%= item.productId %>">
                                            <a class="btn hvr-hover cart" href="#">Add to Cart</a>
                                        </td>
                                        <td class="remove-pr">
                                            <a href="#">
                                        <i class="fas fa-times"></i>
                                    </a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Wishlist -->

    <!-- Start Instagram Feed  -->
    <%- include('../includes/instagram.ejs') %> 
    <!-- End Instagram Feed  -->


    <!-- Start Footer  -->
    <%- include('../includes/footer.ejs') %> 
    <!-- End Footer  -->

    <!-- Start copyright  -->
    <%- include('../includes/copyright.ejs') %> 
    <!-- End copyright  -->

    <a href="#" id="back-to-top" title="Back to top" style="display: none;">&uarr;</a>

    <!-- ALL JS FILES -->
    <%- include('../includes/script.ejs') %> 
    <script src="/js/add-cart-submit.js"></script>
    <script src="/js/add-wishlist-submit.js"></script>
    
</body>

</html>